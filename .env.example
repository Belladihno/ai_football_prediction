# Football AI Prediction API - Environment Template

# Server Configuration
PORT=3000
API_VERSION=api

# Database Configuration 
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=football_predictions
DB_SYNCHRONIZE=true # only in development
DB_LOGGING=false

# Redis Configuration (via Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Football Data API Configuration
# Get a free API key from: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=your_api_key_here
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

# Historical data fetch (comma-separated seasons)
HISTORICAL_SEASONS=2024,2023

# Odds-API.io Configuration
# Get a free API key from: https://odds-api.io/
ODDS_API_IO_KEY=your_api_key_here
ODDS_API_IO_BASE_URL=https://api.odds-api.io/v3
ODDS_API_IO_BOOKMAKERS=Bet365,Unibet

# Cache TTL Configuration (in seconds)
CACHE_FIXTURES=1800      # 30 minutes
CACHE_TEAMS=86400        # 24 hours
CACHE_STANDINGS=21600    # 6 hours
CACHE_PREDICTIONS=3600   # 1 hour

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
